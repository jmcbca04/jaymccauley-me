{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "cleanUrls": true,
  "public": true,
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  },
  "github": {
    "silent": true
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "functions": {
    "api/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
} 